---
import { Image } from "@astrojs/image/components";

import Navbar from "../components/Navbar.astro";
import "../styles/global.css";

import bg from "../images/bg.png";

export interface Props {
  title: string;
  background?: string;
  backgroundImage?: boolean;
}

const { title, background, backgroundImage = false } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/ico" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Profile website for Ray Chung. This portfolio website provides a quick introduction about me and my work experience, projects, and skills. "
    />
    <title>{title}</title>
  </head>
  <body>
    <div class="relative h-[100vh] overflow-x-hidden">
      {
        backgroundImage && (
          <Image
            id="bg"
            src={bg}
            alt="Background Image"
            class="absolute h-[100vh] w-full object-cover opacity-0"
            style="--duration: 2000ms"
            format="webp"
            width={1280}
            quality={75}
          />
        )
      }
      <Navbar />
      <main>
        <slot />
      </main>
    </div>
  </body>
</html>

<script define:vars={{ background }}>
  if (background) {
    document.documentElement.style.setProperty("--background", background);
  }

  const imgEl = document.getElementById("bg");
  function bgLoaded() {
    if (imgEl.complete) {
      imgEl.classList.add("fade-in");
      imgEl.classList.remove("opacity-0");
    }
  }
  if (imgEl) {
    imgEl.onload = bgLoaded;
    bgLoaded();
  }
</script>

<style>
  #bg {
    mask-image: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 1) 90%,
      rgba(0, 0, 0, 0) 100%
    );
    -webkit-mask-image: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 1) 90%,
      rgba(0, 0, 0, 0) 100%
    );
  }
</style>
